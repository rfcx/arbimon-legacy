{
    "apiVersion": "batch/v1",
    "kind": "Job",
    "metadata": {
        "name": "{{arbimon-soundscape-timestamp}}"
    },
    "spec": {
        "ttlSecondsAfterFinished": 86400,
        "template": {
            "spec": {
                "containers": [
                    {
                        "name": "arbimon-soundscape-container",
                        "image": "{{imagePath}}",
                        "imagePullPolicy": "Always",
                        "args": ["legacy"],
                        "envFrom": [
                            {
                                "secretRef": {
                                    "name": "arbimon-soundscapes-secret"
                                }
                            },
                            {
                                "configMapRef": {
                                    "name": "arbimon-soundscapes-config"
                                }
                            }
                        ],
                        "env": [
                            {
                                "name": "JOB_ID",
                                "value": "{{ENV_JOB_ID}}"
                            }
                        ],
                        "resources": {
                            "requests": {
                                "cpu": "0.5",
                                "memory": "512Mi"
                            },
                            "limits": {
                                "cpu": "1",
                                "memory": "1Gi"
                            }
                        }
                    }
                ],
                "restartPolicy": "Never"
            }
        },
        "backoffLimit": 1
    }
}
