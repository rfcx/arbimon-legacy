{
    "apiVersion": "batch/v1",
    "kind": "Job",
    "metadata": {
        "name": "{{aed-clustering-timestamp}}"
    },
    "spec": {
        "template": {
            "spec": {
                "containers": [
                    {
                        "name": "aed-clustering-container",
                        "image": "{{imagePath}}",
                        "envFrom": [
                            {
                                "secretRef": {
                                    "name": "aed-clustering-secrets"
                                }
                            }
                        ],
                        "command": [
                            "python",
                            "./cluster.py"
                        ],
                        "args": [
                            "-e",
                            "{{ARG_EPSILON}}",
                            "-m",
                            "{{ARG_MINSAMPLES}}",
                            "-s",
                            "{{ARG_MAXCLUSTERSIZE}}",
                            "-j",
                            "{{ARG_CLUSTER_JOBID}}",
                            "-a",
                            "{{ARG_AED_JOBID}}"
                        ],
                        "resources": {
                            "requests": {
                                "memory": "0.8",
                                "cpu": "1"
                            },
                            "limits": {
                                "memory": "1",
                                "cpu": "1.5"
                            }
                        }
                    }
                ],
                "imagePullSecrets": [
                    {
                        "name": "aedkey"
                    }
                ],
                "restartPolicy": "Never"
            }
        },
        "backoffLimit": 0
    }
}
