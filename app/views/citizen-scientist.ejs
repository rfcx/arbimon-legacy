<!DOCTYPE html>
<html ng-app="a2.cs-app">
    <%if(url_base){%><base href="<%= url_base %>"/><%}%>
    <% include fragments/header %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% include ng-permissions %>
    <title>RFCx Arbimon - <%= project.name %><% if(card && card.name){ %> - <%= card.name %><%} %></title>
</head>
<body ng-controller="MainCtrl">
    <div class="container-page">
        <div class="content-wrap">
            <nav class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button ng-init="leftCollapsedMenu = true" ng-click="leftCollapsedMenu = !leftCollapsedMenu; rightCollapsedMenu = true" type="button"
                            class="navbar-toggle navbar-toggle-left collapsed">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a href="/" class="navbar-brand navbar-brand-center">
                            <img src="/images/favicon/rfcx-logo.svg">
                            <span class="navbar-title">Arbimon</span>
                        </a>
                        <% if (!user || user.isAnonymousGuest) { %>
                        <a class="navbar-btn btn btn-primary navbar-toggle-right collapse-menu-hide collapsed"
                            href="<%- auth0UniversalLoginUrl %>">
                            Sign In
                        </a>
                        <% } else { %>
                        <div ng-click="toggleSearch = !toggleSearch"
                            style="position: absolute; right: 60px; top: 13px; cursor: pointer;" class="collapse-menu-hide">
                            <i class="fa fa-search" style="font-size: 20px; position: relative;"></i>
                        </div>
                        <button ng-init="rightCollapsedMenu = true" ng-click="rightCollapsedMenu = !rightCollapsedMenu; leftCollapsedMenu = true" type="button"
                            class="navbar-toggle navbar-toggle-right collapsed fa user-avatar<% if(user.isSuper) { %> swag-super<% } %>"
                            style="background-image:url('<%- user.imageUrl %>')">
                        </button>
                        <% } %>
                    </div>
                    <div ng-show="toggleSearch" class="navbar-collapse search-input-mobile"
                        style="padding: 10px 15px; position: relative;">
                        <% include fragments/nav-search %>
                    </div>
                    <div class="navbar-collapse navbar-collapse-menu-rfcx" ng-class="{'collapse': leftCollapsedMenu }">
                        <ul class="nav navbar-nav navbar-left">
                            <li tooltip-placement="bottom" tooltip="<%=  project.name  %>">
                                <a class="text-overflow" style="cursor: default;">
                                    <span><%=  project.name  %></span>
                                </a>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-left hide-tooltip-lg">
                            <li ui-sref="citizen-scientist.my-stats" ui-sref-active="active"><a>My Stats</a></li>
                            <li ui-sref="citizen-scientist.patternmatching" ng-class="{active: $state.includes('citizen-scientist.patternmatching-details') || $state.includes('citizen-scientist.patternmatching')}"><a>Pattern Matching</a></li>
                            <li ui-sref="citizen-scientist.expert" ng-class=" ('citizen-scientist.expert' | includedByState) ? 'active' : ''"
                                ng-if="userPermit.can(['manage pattern matchings', 'view citizen scientist expert interface'])"
                            ><a>Expert</a></li>
                            <li ui-sref="citizen-scientist.admin.classification-stats" ng-class=" ('citizen-scientist.admin' | includedByState) ? 'active' : ''"
                                ng-if="userPermit.can(['view project', 'manage pattern matchings', 'view citizen scientist admin interface'])"
                            ><a>Admin</a></li>
                            <li ui-sref="citizen-scientist.admin.classification-stats" ui-sref-active="active"  ng-if="userPermit.can(['view project', 'view citizen scientist admin interface'])" ><a>Classification Stats</a></li>
                            <li ui-sref="citizen-scientist.admin.user-stats" ui-sref-active="active"  ng-if="userPermit.can(['view project', 'view citizen scientist admin interface'])" ><a>User Stats</a></li>
                            <li ui-sref="citizen-scientist.admin.settings" ui-sref-active="active" ng-if="userPermit.can(['manage pattern matchings', 'view citizen scientist admin interface'])" ><a>Settings</a></li>
                        </ul>
                        <hr class="navbar-divider-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <% if (user && !user.isAnonymousGuest) { %>
                                <li style="padding: 11px 15px 9px; position: relative;" class="search-input">
                                    <% include fragments/nav-search %>
                                </li>
                            <% } %>
                            <hr class="navbar-divider-collapse">
                            <li>
                                <% include fragments/other-rfcx-apps %>
                            </li>
                            <ul class="nav navbar-nav navbar-menu-hide hide-tooltip-lg mr-0">
                                <% include fragments/user-dropdown %>
                            </ul>
                        </ul>
                    </div>
                    <% if (user && !user.isAnonymousGuest) { %>
                    <div class="navbar-collapse navbar-collapse-menu-rfcx" ng-class="{'collapse': rightCollapsedMenu }">
                        <ul class="nav navbar-nav navbar-left collapse-menu-hide">
                            <li>
                                <a href="/user-settings">
                                    <i class="fa fa-wrench"></i> Account Settings
                                </a>
                            </li>
                            <li>
                                <a href="/logout">
                                    <i class="fa fa-sign-out"></i> Sign out
                                </a>
                            </li>
                        </ul>
                    </div>
                    <% } %>
                </div>
            </nav>
            <% if(planAlert == 'expired') { %>
                <div class="alert alert-danger" ng-hide="hideAlertBar" ng-click="hideAlertBar = true">
                    Your project data plan have expired, please renew your plan.
                    If a new plan is not selected after 30 days of the
                    due date, the project will be disable. (click to dismiss)
                    <button class="close" ng-click="hideAlertBar = true">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            <% } %>
            <div id="body">
                <div ui-view="audiodata"  ng-show="$state.includes('audiodata')"></div>
                <div ui-view="visualizer" ng-show="$state.includes('visualizer')"></div>
                <div ui-view="analysis"   ng-show="$state.includes('analysis')"></div>
                <div ui-view="citizen-scientist"   ng-show="$state.includes('citizen-scientist')"></div>
                <div ui-view></div>
            </div>
        </div>
        <% include fragments/footer %>
    </div>
    <script type="text/ng-template" id="customSearchTemplate.html">
        <a>
            <span tooltip="{{match.label}}" ng-bind-html="match.label | typeaheadHighlight:query" class="ng-binding"></span>
            <br><span class="input-search-desc"> {{match.model.description}}</span>
        </a>
    </script>
</body>
</html>
