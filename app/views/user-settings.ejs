<!DOCTYPE html>
<html ng-app="a2.user-settings">

<head>
    <% include head %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>RFCx Arbimon - <%= title %>
    </title>
</head>

<body ng-controller="UserSettingsCtrl as controller">
    <% include home-nav %>
    <div class="container">
        <div class="col-sm-6 panel panel-inverse">
            <div class="panel-heading row">
                <img class="user-avatar col-sm-2 img-responsive" ng-src="{{controller.user.imageUrl}}" alt="user avatar">
                <h3 class="col-sm-10">{{controller.user.name}} {{controller.user.lastname}}'s Profile</h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <label class="control-label">Username</label>
                    <p class="form-control-static">{{controller.user.username}}</p>
                </div>
                <!-- <div class="form-group">
                    <h5><strong>Avatar</strong></h5>
                    <img class="user-avatar" src="<%- user.imageUrl %>" alt="user avatar">
                    <p>Change your avatar at <a href="https://gravatar.com" target="_blank">gravatar.com</a></p>
                </div> -->
                <div class="form-group">
                    <label for="firstname">Name</label>
                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <input id="firstname" type="text" class="form-control" placeholder="First Name" ng-model="controller.data.name">
                        </div>
                        <div class="col-sm-6 form-group">
                            <input type="text" class="form-control" placeholder="Last Name" ng-model="controller.data.lastname">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="new_password">Password</label>
                    <password-input ng-model="controller.data.password" user-inputs="[controller.user.username, controller.user.name, controller.user.lastname, controller.data.username, controller.data.name, controller.data.lastname]" validation="controller.data.passResult"></password-input>
                </div>

                <div class="form-group">
                    <label for="new_password">3<sup>rd</sup> Party Login Authorization</label>
                    <div class="checkbox">
                        <label class="v-center">
                            <input type="checkbox" ng-model="controller.data.oauth.google" ng-true-value="1" ng-false-value="0"/>
                            <i class="icon icon-google"></i>
                            <span>Google account</span>
                        </label>
                    </div>
                    <div class="checkbox">
                        <label class="v-center">
                            <input type="checkbox" ng-model="controller.data.oauth.facebook" ng-true-value="1" ng-false-value="0"/>
                            <i class="icon icon-facebook inlined"></i>
                            <span>Facebook account</span>
                        </label>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <button class="btn btn-block btn-primary" ng-click="controller.save()">
                            <i class="fa fa-floppy-o"></i> Save
                        </button>
                    </div>
                    <div class="col-sm-6">
                        <button class="btn btn-block btn-default" ng-click="controller.reset()">
                            <i class="fa fa-rotate-left"></i> Reset
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
