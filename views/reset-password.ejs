<!DOCTYPE html>
<html ng-app="reset-password">

<head>
    <% include head %>
    <title>ARBIMON II - Reset password</title>
</head>

<body ng-controller="ResetPassCtrl">
    <div class="container">
        <div class="login-top">
            <a href="/"><img src="/images/logo.svg"></a>
        </div>
    </div>
    <div class="login-banner">
        <div class="container">
            <div class="row">
                <div class="col-sm-offset-3 col-sm-6 registration">
                    <div class="panel-body">
                        <% if(!error) { %>
                        <form ng-submit="changePassword()" ng-hide="completed">
                            <h3>Enter a new password</h3>
                            <password-input ng-model="password" validation="passResult"></password-input>
                            <button class="btn btn-primary" type="submit">
                                <i class="fa fa-key"></i> change password
                            </button>
                        </form>
                        <span ng-show="completed">
                            <p class="lead">
                                    Password change successfully
                            </p>
                            <a class="btn btn-success" href="/login">Go to Login</a>
                        </span>
                        <% }  
                        else { 
                        %>
                            <p class="lead text-center">
                                <%- error %>
                            </p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
