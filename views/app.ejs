<!DOCTYPE html>
<html ng-app="arbimon2">
    <% include head %>    
    <title>Arbimon 2 - <%= project.name %></title>
</head>
<body ng-controller="MainCtrl">
    <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button data-target="#navbar-collapse" data-toggle="collapse" type="button" class="navbar-toggle collapsed">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/home" class="navbar-brand">
                    <img src="/images/logo.svg">
                </a>
            </div>
        
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav hide-tooltip-lg">
                    <li ui-sref-active="active">
                        <a ui-sref="dashboard" tooltip="Dashboard" tooltip-placement="bottom">
                            <i class="fa fa-dashboard"></i> 
                            <span class="visible-lg-inline visible-xs-inline">Dashboard</span>
                        </a>
                    </li>
                    <li ui-sref-active="active" tooltip="Data" tooltip-placement="bottom">
                        <a ui-sref="audiodata">
                            <i class="fa fa-cloud-upload"></i> 
                            <span class="visible-lg-inline visible-xs-inline">Data</span>
                        </a>
                    </li>
                    <li ui-sref-active="active" tooltip="Visualizer" tooltip-placement="bottom">
                        <a ui-sref="visualizer">
                            <i class="fa fa-cubes"></i> 
                            <span class="visible-lg-inline visible-xs-inline">Visualizer</span>
                        </a>
                    </li>
                    <li ui-sref-active="active" tooltip="Analysis" tooltip-placement="bottom">
                        <a ui-sref="analysis">
                            <i class="fa fa-send-o"></i> 
                            <span class="visible-lg-inline visible-xs-inline">Analysis</span>
                        </a>
                    </li>
                </ul>
                <ul class="nav navbar-nav hide-tooltip-lg" ng-controller="StatusBarNavIndexController">
                    <li ui-sref-active="active">
                        <a ui-sref="jobs" tooltip="Active Jobs" tooltip-placement="bottom">
                            <i class="fa fa-cogs"></i> 
                            <span class="visible-lg-inline visible-xs-inline">Jobs</span> 
                            <span ng-show="jobslength" class="badge" ng-bind="jobslength"></span>
                        </a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown" dropdown>
                        <a class="dropdown-toggle" dropdown-toggle>
                            <i class="fa fa-sitemap"></i> <%=  project.name  %>
                            <i class="fa fa-caret-down"></i>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a ui-sref="settings" ui-sref-active="active">
                                    <i class="fa fa-wrench"></i> Settings
                                </a>
                            </li>
                            <li>
                                <a ui-sref="users" ui-sref-active="active">
                                    <i class="fa fa-users"></i> Users
                                </a>
                            </li>
                        </ul>
                    </li>
                    <% include user-dropdown %>
                    
                    <% include help-dropdown %>
                </ul>
            </div>
        </div>
    </nav>
    <div id="body">
        <div ui-view="audiodata"  ng-show="$state.includes('audiodata')"></div>
        <div ui-view="visualizer" ng-show="$state.includes('visualizer')"></div>
        <div ui-view="analysis"   ng-show="$state.includes('analysis')"></div>
        <div ui-view></div>
    </div>

</body>
</html>
