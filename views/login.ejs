<!DOCTYPE html>
<html ng-app="login">

<head>
    <% include head %>
    <title>ARBIMON II</title>
</head>

<body ng-controller="LoginCtrl">
    <div class="container">
        <div class="login-top">
            <a href="/"><img src="/images/logo.svg"></a>
        </div>
    </div>
    <div class="jumbotron login-banner">
        <div class="container">
            <div class="row">
                <div class="col-sm-7">
                    <h1>Arbimon II</h1>
                    <p>
                        Bio-acoustics analyzer
                    </p>
                     <a href="/register" class="btn btn-success btn-lg">Sign up today</a> 
                </div>
                
                <div class="col-sm-offset-2 col-sm-3">
                    <div class="login-form">
                        <h3>Already a user?</h3>
                        <form role="form" ng-submit="login()">
                            <div class="form-group">
                                <label class="sr-only" for="user">Username</label>
                                <input id="user"
                                    class="form-control" 
                                    name="username" 
                                    type="text" 
                                    placeholder="Username" 
                                    ng-model="username"
                                    required />
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="pass">Password</label>
                                <input id="pass" 
                                    class="form-control" 
                                    name="password" 
                                    type="password" 
                                    placeholder="Password" 
                                    ng-model="password"
                                    required />
                            </div>
                            <div ng-show="showCaptcha" g-recaptcha
                                sitekey="6LffYQETAAAAAAeEN-dJHFMHxlVVSGsL-tlWWFpE"
                                response="captchaResp"
                                reset-widget="resetCaptcha">
                            </div>
                            <button class="btn btn-primary btn-block" type="submit"><i class="fa fa-sign-in"></i> log in</button>
                            <div class="text-right"><a href="/forgot_request" class="forgot-text">forgot password?</a></div>
                        </form>
                    </div>
                </div>
            </div>
        
            <!-- error message -->
            <% if(message.length) { %>
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
                <strong><%= message %></strong>
            </div>
            <% } %>
        </div>
    </div>
</body>

</html>
