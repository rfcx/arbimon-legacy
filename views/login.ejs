<!DOCTYPE html>
<html>

<head>
    <% include head %>
    <title>ARBIMON II - Login</title>
</head>

<body>    
    <div class="container">
        <div class="login-top">
            <img src="/images/logo.svg">
        </div>
    </div>
    <div class="jumbotron login-banner">
        <div class="container">
            <div class="row">
                <div class="col-sm-7">
                    <h1>Arbimon II</h1>
                    <p>
                        Bio-acoustics analyzer
                    </p>
                     <a href="/register" class="btn btn-success btn-lg">Sign up today</a> 
                </div>
                
                <div class="col-sm-offset-2 col-sm-3">
                    <div class="login-form">
                        <h3>Already a user?</h3>
                        <form method="post" action="" role="form">
                            <div class="form-group">
                                <label class="sr-only" for="user">Username</label>
                                <input id="user"class="form-control" name="username" type="text" placeholder="Username" />
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="pass">Password</label>
                                <input id="pass" class="form-control" name="password" type="password" placeholder="Password" />
                            </div>
                            <button class="btn btn-primary " type="submit"><i class="fa fa-sign-in"></i> log in</button>
                        </form>
                    </div>
                </div>
            </div>
        
            <div class="row">
                <div class="col-sm-offset-4 col-sm-4">
                    <!-- error message -->
                    <% if(message.length) { %>
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert">
                            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                        </button>
                        <strong><%= message %></strong>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
