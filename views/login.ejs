<!DOCTYPE html>
<html ng-app="login">

<head>
    <% include head %>
    <title>ARBIMON II</title>
</head>

<body ng-controller="LoginCtrl">
    <div class="container">
        <div class="login-top">
            <a href="/"><img src="/images/logo.svg"></a>
        </div>
    </div>
    <div class="jumbotron login-banner">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-7 col-lg-7">
                    <h1>Arbimon II</h1>
                    <p>
                        Bio-acoustics analyzer
                    </p>
                     <a href="/register" class="btn btn-success btn-lg">Sign up today</a> 
                </div>
                
                <div class="col-sm-12 col-md-offset-1 col-md-4 col-lg-offset-2 col-lg-3">
                    <div class="login-form">
                        <h3>Already a user?</h3>
                        <form role="form" ng-submit="login()">
                            <div class="form-group">
                                <label class="sr-only" for="user">Username</label>
                                <input id="user"
                                    class="form-control" 
                                    name="username" 
                                    type="text" 
                                    placeholder="Username" 
                                    ng-model="username"
                                    required />
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="pass">Password</label>
                                <input id="pass" 
                                    class="form-control" 
                                    name="password" 
                                    type="password" 
                                    placeholder="Password" 
                                    ng-model="password"
                                    required />
                            </div>
                            <div ng-show="showCaptcha" g-recaptcha
                                sitekey="6LffYQETAAAAAAeEN-dJHFMHxlVVSGsL-tlWWFpE"
                                response="captchaResp"
                                reset-widget="resetCaptcha">
                            </div>
                            <button class="btn btn-primary btn-block" type="submit"><i class="fa fa-sign-in"></i> log in</button>
                            <div class="text-right"><a href="/forgot_request" class="forgot-text">forgot password?</a></div>
                        </form>
                    </div>
                </div>
            </div>
            
        </div>
        
    </div>
    
    <div class="container">
        
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2">
                <ul class="list-inline">
                    <li><a target="_blank" href="http://www.sieve-analytics.com">sieve-analytics.com</a></li>
                    <li><a target="_blank" href="http://www.sieve-analytics.com/#!arbimon/cjg9">ARBIMON</a></li>
                    <li><a target="_blank" href="http://www.sieve-analytics.com/#!landmapper/ccoq">Land Mapper</a></li>
                    <li>
                        <a target="_blank" href="https://www.twitter.com/sieveAnalytics"><i class="fa fa-lg fa-twitter-square"></i></a>
                        <a target="_blank" href="https://www.facebook.com/sieveanalytics"><i class="fa fa-lg fa-facebook-square"></i></a>
                    </li>
                    <li><i class="fa fa-copyright"></i>2015 Sieve Analytics</li>
                </ul>
            </div>
        </div>
        
    </div>
</body>

</html>
