<!DOCTYPE html>
<html ng-app="a2.admin">

<head>
    <% include head %>
    <title>Arbimon II - Admin</title>
</head>

<body>
    <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button ng-init="collapsedMenu = true" ng-click="collapsedMenu = !collapsedMenu" type="button" class="navbar-toggle collapsed">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/home" class="navbar-brand">
                    <img src="/images/logo.svg">
                </a>
            </div>
        
            <div class="navbar-collapse" ng-class="{'collapse': collapsedMenu }">
                <ul class="nav navbar-nav hide-tooltip-lg">
                    <li ui-sref-active="active" tooltip="Dashboard">
                        <a ui-sref="dashboard"><i class="fa fa-dashboard"></i> Dashboard</a>
                    </li>
                    <li ui-sref-active="active" tooltip="Projects">
                        <a ui-sref="projects.list"><i class="fa fa-rocket"></i> Projects</a>
                    </li>
                        <!-- <li ui-sref-active="active" tooltip="Users">
                        <a ui-sref="users">Users</a>
                    </li> -->
                    <li ui-sref-active="active" tooltip="Jobs">
                        <a ui-sref="jobs"><i class="fa fa-cogs"></i> Jobs</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav hide-tooltip-lg">
                    <li tooltip-placement="bottom" tooltip="Forum">
                        <a target="_blank" href="https://forum.sieve-analytics.com/arbimon/">
                            <i class="fa fa-comments-o"></i>
                            <span class="visible-lg-inline visible-xs-inline">Forum</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div ui-view></div>
    </div>
</body>

</html>
